<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_alignParentRight="true"
        android:layout_height="70dp"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:layout_gravity="center"
        android:id="@+id/callFAB"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:src="@drawable/ic_launcher" />
    <ImageView
        android:layout_width="wrap_content"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:src="@drawable/ic_arrow_upward_black_48dp"
        android:layout_below="@+id/callFAB"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_below="@+id/arrow"
        android:id="@+id/message"
        android:visibility="gone"
        android:textAlignment="center"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:textColor="@color/colorPrimaryText"
        android:padding="20dp"
        android:text="Click on the ShareLoc icon. After clicking on the icon you will get the option of the stored addresses. By clicking on an address, you can share it with the person who is on the call."/>
</RelativeLayout>